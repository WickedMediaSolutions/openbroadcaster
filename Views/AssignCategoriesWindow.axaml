<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="OpenBroadcaster.Views.AssignCategoriesWindow"
        Title="Assign Categories"
        Width="520" Height="480">
  <DockPanel Margin="12">
    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button Content="Save" Click="OnSave" />
      <Button Content="Cancel" Click="OnCancel" />
    </StackPanel>

    <StackPanel Spacing="8">
      <TextBlock Text="{Binding TrackTitle}" FontWeight="Bold" FontSize="16" />

      <TextBlock Text="Categories" FontWeight="SemiBold" />
      <ListBox ItemsSource="{Binding Categories}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <CheckBox Content="{Binding DisplayName}" IsChecked="{Binding IsSelected}" />
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>

      <TextBlock Text="Add Category" FontWeight="SemiBold" Margin="0,8,0,0" />
      <StackPanel Orientation="Horizontal" Spacing="8">
        <TextBox Width="220" Watermark="Name" Text="{Binding NewCategoryName}" />
        <TextBox Width="160" Watermark="Type" Text="{Binding NewCategoryType}" />
        <Button Content="Add" Command="{Binding AddCategoryCommand}" />
      </StackPanel>
      <TextBlock Text="{Binding LastError}" Foreground="Red" />
    </StackPanel>
  </DockPanel>
</Window>
