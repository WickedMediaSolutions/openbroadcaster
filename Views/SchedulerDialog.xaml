<Window x:Class="OpenBroadcaster.Views.SchedulerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Schedule Rotation"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        MinWidth="460"
        MinHeight="260"
        mc:Ignorable="d">
    <StackPanel Margin="18" Width="430">
        <TextBlock Text="Schedule Entry" FontWeight="Bold" FontSize="16" Margin="0,0,0,12" />

        <Grid Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Rotation" VerticalAlignment="Center" />
            <ComboBox Grid.Column="1"
                      ItemsSource="{Binding RotationOptions}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedRotation, Mode=TwoWay}"
                      MinWidth="220" />

            <TextBlock Grid.Row="1" Text="Day" VerticalAlignment="Center" Margin="0,8,0,0" />
            <ComboBox Grid.Row="1" Grid.Column="1"
                      ItemsSource="{Binding DayOptions}"
                      SelectedValuePath="Value"
                      DisplayMemberPath="Label"
                      SelectedValue="{Binding SelectedDay, Mode=TwoWay}"
                      Margin="0,8,0,0"
                      MinWidth="160" />

            <TextBlock Grid.Row="2" Text="Start (HH:mm)" VerticalAlignment="Center" Margin="0,8,0,0" />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding StartTimeText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120" Margin="0,8,0,0" />

            <TextBlock Grid.Row="3" Text="End (HH:mm)" VerticalAlignment="Center" Margin="0,8,0,0" />
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding EndTimeText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120" Margin="0,8,0,0" />
        </Grid>

        <CheckBox Content="Enabled" IsChecked="{Binding Enabled, Mode=TwoWay}" Margin="0,0,0,12" />

        <TextBlock Text="Choose which rotation to start automatically, the day (or every day), and the exact start/end time."
                   Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                   Margin="0,0,0,12" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Save" Width="90" Margin="0,0,8,0" IsDefault="True" Click="OnSaveClick" />
            <Button Content="Cancel" Width="90" IsCancel="True" Click="OnCancelClick" />
        </StackPanel>
    </StackPanel>
</Window>
