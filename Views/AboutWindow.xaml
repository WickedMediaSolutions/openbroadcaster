<Window x:Class="OpenBroadcaster.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenBroadcaster.Views"
        mc:Ignorable="d"
        Title="About OpenBroadcaster" Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource {x:Type Window}}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="OpenBroadcaster" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="1" Text="{Binding AppVersion}" FontSize="12" Foreground="Gray" HorizontalAlignment="Center" Margin="0,6,0,0" />

        <TextBlock Grid.Row="2" TextWrapping="Wrap" Margin="0,10,0,0" HorizontalAlignment="Center">
            Designed by Josh Runde, a broadcaster and programmer with 30 years of experience, to provide what was lacking in the industry.
        </TextBlock>

        <TextBlock Grid.Row="3" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Hyperlink NavigateUri="https://github.com/wickedmediasolutions/openbroadcaster" RequestNavigate="Hyperlink_RequestNavigate">
                https://github.com/wickedmediasolutions/openbroadcaster
            </Hyperlink>
        </TextBlock>

        <Button Grid.Row="4" Content="Close" IsDefault="True" Click="CloseButton_Click" HorizontalAlignment="Right" Width="80" Margin="0,10,0,0"/>
    </Grid>
</Window>