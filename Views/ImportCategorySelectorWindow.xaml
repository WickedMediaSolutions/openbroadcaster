<Window x:Class="OpenBroadcaster.Views.ImportCategorySelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Import Categories"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterOwner"
        Background="#FF0E1218">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Select categories to assign to imported tracks:" 
                   FontSize="14" 
                   Foreground="#FF7CFFD2" 
                   Margin="0,0,0,15"
                   TextWrapping="Wrap" />

        <Border Grid.Row="1"
                Background="#FF1A1E26"
                BorderBrush="#FF2C3543"
                BorderThickness="1"
                Padding="10"
                Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding DisplayName}"
                                      IsChecked="{Binding IsSelected}"
                                      Foreground="White"
                                      Margin="0,5" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Import" 
                    Click="OnImportClick"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#FF0F4C75"
                    Foreground="White" />
            <Button Content="Cancel" 
                    Click="OnCancelClick"
                    Width="100"
                    Height="35"
                    Background="#FF2C3543"
                    Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
