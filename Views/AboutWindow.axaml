<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="OpenBroadcaster.Views.AboutWindow"
        Title="About OpenBroadcaster"
        Width="480" Height="320">
  <StackPanel Margin="20" Spacing="12">
    <TextBlock Text="OpenBroadcaster" FontSize="22" FontWeight="Bold" />
    <TextBlock Text="Professional radio automation." />
    <TextBlock Text="https://openbroadcaster.org" Classes="link" />
    <Button Content="Close" HorizontalAlignment="Right" Click="OnClose" />
  </StackPanel>
</Window>
