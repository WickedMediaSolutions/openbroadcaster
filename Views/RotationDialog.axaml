<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="OpenBroadcaster.Views.RotationDialog"
        Title="Rotation"
        Width="520" Height="480">
  <DockPanel Margin="12">
    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button Content="Save" Click="OnSave" />
      <Button Content="Cancel" Click="OnCancel" />
    </StackPanel>

    <StackPanel Spacing="8">
      <TextBox Watermark="Rotation Name" Text="{Binding Name}" />
      <CheckBox Content="Active" IsChecked="{Binding IsActive}" />

      <TextBlock Text="Categories" FontWeight="SemiBold" />
      <ListBox ItemsSource="{Binding CategoryOptions}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" />
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
      <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" />
    </StackPanel>
  </DockPanel>
</Window>
