<Window x:Class="OpenBroadcaster.Views.ManageCategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Library Categories"
        Width="600"
        Height="500"
        WindowStartupLocation="CenterOwner"
        Background="#FF0E1218">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Library Categories" 
                   FontSize="20" 
                   FontWeight="SemiBold" 
                   Foreground="#FF7CFFD2" 
                   Margin="0,0,0,15" />

        <ListView Grid.Row="1" 
                  ItemsSource="{Binding Categories}" 
                  SelectedItem="{Binding SelectedCategory}"
                  Background="#FF1A1E26"
                  BorderBrush="#FF2C3543"
                  BorderThickness="1"
                  Margin="0,0,0,15">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsTohCategory}" Value="True">
                            <Setter Property="Foreground" Value="#FF7CFFD2" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Category Name" Width="280">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”’ " Visibility="{Binding IsTohCategory, Converter={StaticResource BoolToVisibility}}" />
                                    <TextBlock Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="250" />
                </GridView>
            </ListView.View>
        </ListView>

        <GroupBox Grid.Row="2" 
                  Header="Add New Category" 
                  Foreground="#FF7CFFD2"
                  BorderBrush="#FF2C3543"
                  Margin="0,0,0,15"
                  Padding="15">
            <GroupBox.Style>
                <Style TargetType="GroupBox">
                    <Setter Property="Header" Value="Add New Category" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsEditing}" Value="True">
                            <Setter Property="Header" Value="Edit Category" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </GroupBox.Style>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Name:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           Foreground="White" />
                <TextBox Grid.Column="1" 
                         Text="{Binding NewCategoryName, UpdateSourceTrigger=PropertyChanged}" 
                         Height="30"
                         VerticalContentAlignment="Center"
                         Padding="5" />
                
                <TextBlock Grid.Column="2" 
                           Text="Type:" 
                           VerticalAlignment="Center" 
                           Margin="15,0,10,0"
                           Foreground="White" />
                <TextBox Grid.Column="3" 
                         Text="{Binding NewCategoryType, UpdateSourceTrigger=PropertyChanged}" 
                         Height="30"
                         VerticalContentAlignment="Center"
                         Padding="5" />
                
                <Button Grid.Column="4" 
                        Content="{Binding AddButtonText}" 
                        Command="{Binding AddCategoryCommand}"
                        Width="80"
                        Height="30"
                        Margin="10,0,0,0"
                        Background="#FF0F4C75"
                        Foreground="White" />
                
                <Button Grid.Column="5" 
                        Content="Cancel" 
                        Command="{Binding CancelEditCommand}"
                        Width="80"
                        Height="30"
                        Margin="10,0,0,0"
                        Background="#FF5A5A5A"
                        Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Edit Selected" 
                    Command="{Binding EditCategoryCommand}"
                    Width="130"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#FF0F4C75"
                    Foreground="White" />
            <Button Content="Remove Selected" 
                    Command="{Binding RemoveCategoryCommand}"
                    Width="130"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#FF8B0000"
                    Foreground="White" />
            <Button Content="Close" 
                    Click="OnCloseClick"
                    Width="100"
                    Height="35"
                    Background="#FF2C3543"
                    Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
