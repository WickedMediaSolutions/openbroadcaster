<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="OpenBroadcaster.Avalonia.Views.AssignCategoriesWindow"
        Width="480" Height="420" Title="Assign Categories">
  <DockPanel Margin="8">
    <ScrollViewer DockPanel.Dock="Top">
      <StackPanel Name="CategoriesPanel" />
    </ScrollViewer>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom" Margin="0,8,0,0">
      <Button Width="90" Margin="6,0" Click="OkClicked">OK</Button>
      <Button Width="90" Margin="6,0" Click="CancelClicked">Cancel</Button>
    </StackPanel>
  </DockPanel>
</Window>