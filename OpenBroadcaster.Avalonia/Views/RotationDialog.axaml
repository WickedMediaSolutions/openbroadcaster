<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="OpenBroadcaster.Avalonia.Views.RotationDialog"
        Width="500" Height="420" Title="Rotation">
  <Grid RowDefinitions="Auto,*" Margin="8">
    <StackPanel Spacing="8">
      <StackPanel Orientation="Horizontal" Spacing="8">
        <TextBlock Text="Name" Width="100" VerticalAlignment="Center" />
        <TextBox Text="{Binding Name, Mode=TwoWay}" Width="320" />
      </StackPanel>
      <StackPanel Orientation="Horizontal" Spacing="8">
        <CheckBox IsChecked="{Binding Enabled, Mode=TwoWay}" Content="Enabled" />
        <CheckBox IsChecked="{Binding IsActive, Mode=TwoWay}" Content="Active" Margin="12,0,0,0" />
      </StackPanel>
      <TextBlock Text="Slots" FontWeight="SemiBold" />
      <ListBox Items="{Binding Slots}" Height="220">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <StackPanel Orientation="Horizontal" Spacing="8">
              <ComboBox Width="260" SelectedItem="{Binding CategoryName, Mode=TwoWay}" Items="{Binding DataContext.CategoryOptions, RelativeSource={RelativeSource AncestorType=Window}}" />
              <TextBox Width="60" Text="{Binding Weight, Mode=TwoWay}" />
            </StackPanel>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Spacing="8">
        <Button Content="Add Slot" Command="{Binding AddSlotCommand}" />
        <Button Content="Remove Slot" Command="{Binding RemoveSlotCommand}" />
      </StackPanel>
    </StackPanel>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,8,0,0">
      <Button Content="Save" Width="90" Click="OnSaveClick" />
      <Button Content="Cancel" Width="90" Click="OnCancelClick" Margin="8,0,0,0" />
    </StackPanel>
  </Grid>
</Window>