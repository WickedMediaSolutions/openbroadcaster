<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="OpenBroadcaster.Avalonia.Views.SchedulerDialog"
        Width="420" Height="260" Title="Schedule Entry">
  <Grid Margin="8">
    <StackPanel Spacing="8">
      <StackPanel Orientation="Horizontal" Spacing="8">
        <TextBlock Text="Day" Width="100" VerticalAlignment="Center" />
        <ComboBox SelectedItem="{Binding Day, Mode=TwoWay}" Width="200">
          <ComboBoxItem Content="Monday" />
          <ComboBoxItem Content="Tuesday" />
          <ComboBoxItem Content="Wednesday" />
          <ComboBoxItem Content="Thursday" />
          <ComboBoxItem Content="Friday" />
          <ComboBoxItem Content="Saturday" />
          <ComboBoxItem Content="Sunday" />
        </ComboBox>
      </StackPanel>

      <StackPanel Orientation="Horizontal" Spacing="8">
        <TextBlock Text="Rotation" Width="100" VerticalAlignment="Center" />
        <ComboBox Items="{Binding Rotations}" SelectedItem="{Binding SelectedRotation, Mode=TwoWay}" Width="220" />
      </StackPanel>

      <StackPanel Orientation="Horizontal" Spacing="8">
        <TextBlock Text="Start (HH:mm)" Width="100" VerticalAlignment="Center" />
        <TextBox Text="{Binding StartTimeString, Mode=TwoWay}" Width="120" />
        <TextBlock Text="End (HH:mm)" Width="80" VerticalAlignment="Center" Margin="8,0,0,0" />
        <TextBox Text="{Binding EndTimeString, Mode=TwoWay}" Width="120" />
      </StackPanel>

      <StackPanel Orientation="Horizontal">
        <CheckBox IsChecked="{Binding Enabled, Mode=TwoWay}" Content="Enabled" />
      </StackPanel>

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
        <Button Content="Save" Width="90" Click="OnSaveClick" />
        <Button Content="Cancel" Width="90" Click="OnCancelClick" Margin="8,0,0,0" />
      </StackPanel>
    </StackPanel>
  </Grid>
</Window>