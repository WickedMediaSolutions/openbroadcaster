<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="OpenBroadcaster.Avalonia.Views.SimpleInputWindow"
        Width="420" Height="150">
  <StackPanel Margin="12">
    <TextBlock Name="PromptBlock" FontWeight="Bold" />
    <TextBox Name="InputBox" Margin="0,8,0,8" />
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Name="OkButton" Width="90" Margin="6,0" Click="OkClicked">OK</Button>
      <Button Width="90" Margin="6,0" Click="CancelClicked">Cancel</Button>
    </StackPanel>
  </StackPanel>
</Window>