{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "OpenBroadcaster.RelayService": "Debug"
    }
  },
  "AllowedHosts": "*",
  
  "Relay": {
    "// IMPORTANT": "In production, use environment variables or secure vault for secrets",
    
    "// JWT Configuration": "For REST API authentication",
    "Jwt": {
      "SecretKey": "CHANGE_THIS_TO_A_SECURE_SECRET_KEY_AT_LEAST_32_CHARS_LONG",
      "Issuer": "OpenBroadcaster.RelayService",
      "Audience": "OpenBroadcaster",
      "TokenExpirationMinutes": 60
    },
    
    "// Station Authentication": "Pre-shared tokens for station connections",
    "Stations": {
      "DEMO-FM": {
        "Token": "demo-station-token-change-in-production",
        "Name": "Demo FM",
        "Permissions": ["all"]
      }
    },
    
    "// API Keys for WordPress": "Different permission levels",
    "ApiKeys": {
      "public-read-key": {
        "Name": "Public Read Access",
        "Permissions": ["read"]
      },
      "dj-access-key": {
        "Name": "DJ Access",
        "Permissions": ["read", "search", "queue"]
      },
      "admin-access-key": {
        "Name": "Admin Access", 
        "Permissions": ["read", "search", "queue", "admin"]
      }
    },
    
    "// Connection Settings": "",
    "MaxConnectionsPerStation": 1,
    "HeartbeatTimeoutSeconds": 90,
    "MaxMessageSizeBytes": 1048576
  }
}
